def yossarian_first
    puts " 'They're trying to kill me,' Yossarian told him calmly. "
end 

def clevinger_first
    puts " 'No one's trying to kill you!' Clevinger cried. "
end 

def yossarian_second
    puts " 'Then why are they shooting at me?' Yossarian asked. "
end 

def clevinger_second
    puts " 'They're shooting at everyone. They're trying to kill everyone.' Clevinger answered. "
end 

def yossarian_third
    puts "And what difference does that make?"
end 

def dialogue
    yossarian_first
    clevinger_first
    yossarian_second
    clevinger_second
    yossarian_third
end 

dialogue
